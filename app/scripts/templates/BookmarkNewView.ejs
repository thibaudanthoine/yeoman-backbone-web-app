<ul class="breadcrumb">
    <li><a href="#/bookmarks/index">Home</a></li>
    <li class="active">New</li>
</ul>
<div class="well">
    <form action="#/bookmark/new" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" value="<%= title %>" placeholder="Title"/>
            </div>
        </div>
        <div class="form-group">
            <label for="url" class="col-sm-2 control-label">URL</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="url" value="<%= url %>" placeholder="URL"/>
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description" rows="5" name="description" placeholder="Description"><%= description %></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="save btn btn-large btn-info" type="submit">Save</button>
                <a href="#/bookmarks/index" class="btn btn-large">Cancel</a>
            </div>
        </div>
    </form>
</div>